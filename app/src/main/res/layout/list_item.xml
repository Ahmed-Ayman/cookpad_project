<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmed_ayman.weatherforecast.MainActivity"
    android:layout_margin="20dp"

    android:background="#ab07fabd"
    >
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="4dp"

        >

        <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#44000000"
            android:padding="10dp"
            android:text="Date"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:adjustViewBounds="true"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_below="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />
        <TextView
            android:id="@+id/max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="17 C"
            android:textColor="#f1ff57"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/weather_icon"
            android:layout_centerHorizontal="true" />





        <TextView
            android:id="@+id/details_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_alignTop="@+id/weather_icon"
            android:layout_alignRight="@+id/max_temp"
            android:layout_alignEnd="@+id/max_temp" />



        <TextView
            android:id="@+id/min_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="17 C"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@+id/max_temp"
            android:layout_alignLeft="@+id/max_temp"
            android:layout_alignStart="@+id/max_temp"
            android:layout_marginTop="18dp"
            android:layout_alignRight="@+id/max_temp"
            android:layout_alignEnd="@+id/max_temp" />

        <ImageView
            android:id="@+id/humidity_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icons_humidity"
            android:background="@drawable/back"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/min_tem"
            android:layout_alignLeft="@+id/pressure_icon"
            android:layout_alignStart="@+id/pressure_icon" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity :"
            android:textColor="#ff7c11"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/humidity_icon"
            android:layout_alignLeft="@id/humidity_icon"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:id="@+id/pressure_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_pressure"
            android:layout_below="@+id/humidity_icon"
            android:background="@color/White"
            android:layout_alignLeft="@+id/weather_icon"
            android:layout_alignStart="@+id/weather_icon" />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pressure :"
            android:textColor="#ff7c11"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/pressure_icon"
android:layout_alignLeft="@id/pressure_icon"
            android:layout_marginLeft="40dp"
            />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
